<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@color/BLACK">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="600.0dip"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/zoomImgs"
        android:layout_width="600.0dip"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="@drawable/ui_bg_05"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/login_logo"/>

            <ImageView
                android:id="@+id/iv_sd_no_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_default_pic"
                android:visibility="gone"/>

          <!--  <Gallery
                android:id="@+id/gallery_head"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:spacing="6.0dip"
                android:src="@drawable/user_default_pic"/>-->
            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:scaleType="fitXY"
                android:spacing="6.0dip"
                android:src="@drawable/ui_head_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/logineditetext_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_input_user"/>

                <EditText
                    android:id="@+id/et_phonenum"
                    style="@style/et_style_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView1"
                    android:background="@android:color/transparent"
                    android:hint="请输入账号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="10.0dip"
                    android:textSize="18.0sp"/>

                <Button
                    android:id="@+id/btn_history_account"
                    android:layout_width="48.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/login_history_down_arrow_bg"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/DividerColor"/>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="46.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/logineditetext_bg2">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/login_input_password"/>

                <EditText
                    android:id="@+id/et_pwd"
                    style="@style/et_style_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView2"
                    android:background="@android:color/transparent"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:paddingLeft="10.0dip"
                    android:textSize="18.0sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llsub03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="30.0dip">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btnregisterbg"
                android:text="注册"
                android:textColor="@color/WHITE"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_login"
                style="@style/btn_style_white"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/loginbtnbg"
                android:text="登　　录"
                android:textColor="@color/WHITE"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlsub02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip">

            <Button
                android:id="@+id/btn_remember"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/frame_with_noshadow_bg"
                android:visibility="gone"/>

            <Button
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/btn_remember"
                android:background="@null"
                android:text="注册"
                android:textColor="@color/btn_green_noraml"
                android:textSize="18.0sp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/btn_remember"
                android:text="记住登录密码"
                android:textColor="@color/FONT_PINK"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="忘记密码 ?"
                android:textColor="@color/btn_green_noraml"
                android:textSize="18.0sp"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>